<% provide :title, t(".register") %>
<% provide :icon, "icon/books.png"%>
<div class="site-section bg-light" id="main-content">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 bg-white p-5" data-aos="fade">
        <div class="border-primary mb-5 pb-1">
          <h2 class="text-primary">
            <%= t ".register" %>
          </h2>
        </div>
        <%= form_for resource, as: resource_name,
          url: registration_path(resource_name), html: {class: "mb-5"} do |f| %>

          <%= render partial: "shared/error_messages",
            locals: {object: resource}%>

          <div class="row form-group">
            <div class="col-md-12">
              <%= f.label :email, class: "text-black" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "form-control" %>
            </div>
          </div>

          <div class="row form-group">
            <div class="col-md-12">
              <%= f.label :password, t(".password"), class: "text-black" %>
              <% if @minimum_password_length %>
                <em>
                  (<%= t ".characters_minimum",
                    pass: @minimum_password_length %>)
                </em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password",
                class: "form-control" %>
            </div>
          </div>

          <div class="row form-group">
            <div class="col-md-12">
              <%= f.label :password_confirmation, t(".password_confirmation"),
                class: "text-black" %>
              <%= f.password_field :password_confirmation,
              autocomplete: "new-password", class: "form-control" %>
            </div>
          </div>

          <div class="row form-group">
            <div class="col-md-12">
              <%= f.submit t(".signup"), class: "btn btn-primary py-2 px-4 text-white" %>
            </div>
          </div>

        <% end %>
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="loginModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title text-primary">
          <%= t ".sign_in" %>
        </h4>
        <button type="button" class="close" data-dismiss="modal">
          &times;
        </button>
      </div>
      <div class="modal-body">
        <div class="row justify-content-center">
          <div class="col-md-8" data-aos="fade">
            <%= form_for resource, :as => resource_name,
              url: session_path(resource_name), remote: true do |f| %>
              <div class="row form-group">
                <div class="col-md-12" id="alert-login">
                </div>
              </div>
              <div class="row form-group">
                <div class="col-md-12">
                  <%= f.label :email, class: "text-black" %><br/>
                  <%= f.email_field :email, class: "form-control" %>
                </div>
              </div>
              <div class="row form-group">
                <div class="col-md-12">
                  <%= f.label t(".password"), class: "text-black" %><br/>
                  <%= f.password_field :password, class: "form-control" %>
                </div>
              </div>
              <div class="row form-group">
                <div class="col-md-12">
                  <%= f.check_box :remember_me %>
                  <%= f.label t(".remember_me"), class: "text-black" %>
                </div>
              </div>
              <div class="row form-group">
                <div class="col-md-12">
                  <%= f.submit t(".log_in"),
                    class: "btn btn-primary py-2 px-4 text-white" %>
                </div>
              </div>
            <% end %>
            <%= render "users/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

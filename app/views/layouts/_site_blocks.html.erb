<div class="site-blocks-cover overlay" id="bg-site-blocks" data-aos="fade"
  data-stellar-background-ratio="0.5">
  <div class="container">
    <div class="row align-items-center justify-content-center text-center">
      <div class="col-md-12">
        <div class="row justify-content-center mb-4">
          <div class="col-md-8 text-center">
            <h1 class="" data-aos="fade-up">
              <%= t ".title" %>
            </h1>
            <p data-aos="fade-up" data-aos-delay="100">
              <%= t ".maxim" %>
            </p>
            <%= render "shared/flash" %>
          </div>
        </div>

        <div class="form-search-wrap" data-aos="fade-up" data-aos-delay="200">
          <%= form_with url: user_book_searches_path, method: :get,
            local: true do |f| %>
            <div class="row align-items-center">
              <div class="col-sm-12 col-xl-9 mb-4 mb-xl-0">
                <%= f.text_field :q, class: "form-control rounded",
                  placeholder: t(".search_content"), id: "content-search" %>
              </div>
              <div class="col-sm-12 col-xl-3 ml-auto text-right">
                <%= f.submit t(".search"),
                  class: "btn btn-primary btn-block rounded"%>
              </div>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
